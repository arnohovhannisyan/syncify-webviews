{
  "name": "syncify-webviews",
  "version": "1.0.0",
  "main": "dist/main.js",
  "description": "A reliable way of syncing your VSCode settings and extensions",
  "license": "MIT",
  "scripts": {
    "build": "yarn clean && parcel build src/pages/**/*.html --public-url . --cache-dir .cache/all --no-source-maps && yarn postprocess",
    "watch:landing": "parcel src/pages/landing/landing.html -d dist-watch/landing --cache-dir .cache/landing",
    "watch:repo": "parcel src/pages/repository-creation/repository-creation.html -d dist-watch/repository-creation --cache-dir .cache/repository-creation",
    "watch:settings": "parcel src/pages/settings/settings.html -d dist-watch/settings --cache-dir .cache/settings",
    "clean": "shx rm -rf dist",
    "postprocess": "node scripts/postprocess.js"
  },
  "devDependencies": {
    "@types/bootstrap": "^4.3.1",
    "@types/fs-extra": "^8.0.0",
    "@types/jquery": "^3.3.31",
    "@types/lodash": "^4.14.138",
    "@types/node": "^12.7.5",
    "@types/react": "^16.9.2",
    "@types/react-dom": "^16.9.0",
    "fast-glob": "^3.0.4",
    "fs-extra": "^8.1.0",
    "parcel-bundler": "^1.12.3",
    "prettier": "^1.18.2",
    "sass": "^1.22.12",
    "shx": "^0.3.2",
    "tslib": "^1.10.0",
    "tslint": "^5.20.0",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.6.3"
  },
  "dependencies": {
    "bootstrap": "4.3.1",
    "jquery": "^3.4.1",
    "lodash": "^4.17.15",
    "popper.js": "^1.15.0",
    "react": "^16.9.0",
    "react-dom": "^16.9.0"
  },
  "browserslist": [
    "last 10 Chrome versions"
  ]
}
