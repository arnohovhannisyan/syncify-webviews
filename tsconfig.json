{
	"compilerOptions": {
		"baseUrl": "src",
		"paths": {
			"~/*": ["./*"]
		},
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"lib": ["ESNext", "DOM"],
		"strict": true,
		"jsx": "react",
		"jsxFactory": "h"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
