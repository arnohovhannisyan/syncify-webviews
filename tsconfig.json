{
	"compilerOptions": {
		"resolveJsonModule": true,
		"lib": ["ESNext", "DOM"],
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"jsx": "react",
		"jsxFactory": "h",
		"strict": true,
		"baseUrl": "src",
		"paths": {
			"~/*": ["./*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
